<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default panel-top">
        <div class="panel-heading text-center">
          <h2>Subscribe Now!</h2>
          <h4><%= @plan_description %></h4>
          <h4>$<%= @data_amount %></h4>
        </div>
        <div class="panel-body">
          <%= form_tag subscription_path, id: "payment-form" do %>
              <div class="card-fields">
                <span class="payment-errors"></span>

                <div class="form-row form-group">
                  <label>Card Number</label>
                  <input type="text" maxlength="16" data-stripe="number" class="form-control" placeholder="4242 4242 4242 4242" />
                </div>

                <div class="form-row form-group">
                  <label>CVC</label>
                  <input type="text" maxlength="3" data-stripe="cvc" class="form-control" placeholder="123" />
                </div>

                <div class="form-row form-group">
                    <label>
                      <span>Expiration (MM/YYYY)</span>

                    </label>
                    <div class="row">
                      <div class="col-xs-3">
                        <input type="text" maxlength="2" data-stripe="exp-month" class="form-control" placeholder="MM" />
                      </div>
                      <div class="col-xs-4">
                        <input type="text" maxlength="4" data-stripe="exp-year" class="form-control" placeholder="YYYYY"/>
                      </div>
                    </div>
                </div>
                <input type="hidden" name="plan_id" value="<%= @plan_id %>" />
              </div>
              <button type="submit" class="btn btn-block btn-primary">Submit Payment</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
