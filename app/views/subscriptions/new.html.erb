<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default panel-top">
        <div class="panel-heading text-center">
          <h2>Subscribe Now!</h2>
          <h4><%= @plan_description %></h4>
          <h4>$<%= @data_amount %></h4>
        </div>
        <div class="panel-body">
          <% if current_user.card_last4? %>
            <div class="card-on-file">
              <h4>Your Current Card on File</h4>
              <div>
                <%= current_user.card_type %> **** **** **** <%= current_user.card_last4 %>
              </div>
              <div>
                Expires <%= current_user.card_exp_month %> / <%= current_user.card_exp_year %>
              </div>
              <p>Leave form below empty and press submit payment to use current card on file.</p>
            </div>

          <% end %>

          <%= form_tag subscription_path, id: "payment-form" do %>
              <div class="card-fields">
                <span class="payment-errors"></span>

                <div class="form-row form-group">
                  <label>Card Number</label>
                  <input type="text" data-stripe="number" class="form-control" placeholder="4242 4242 4242 4242" />
                </div>

                <div class="form-row form-group">
                  <label>CVC</label>
                  <input type="text" data-stripe="cvc" class="form-control" placeholder="123" />
                </div>

                <div class="form-row form-group">
                    <label>
                      <span>Expiration (MM/YYYY)</span>

                    </label>
                    <div class="row">
                      <div class="col-xs-3">
                        <input type="text" data-stripe="exp-month" class="form-control" placeholder="MM" />
                      </div>
                      <div class="col-xs-4">
                        <input type="text" data-stripe="exp-year" class="form-control" placeholder="YYYYY"/>
                      </div>
                    </div>
                </div>
                <input type="hidden" name="plan_id" value="<%= @plan_id %>" />
              </div>
              <button type="submit" class="btn btn-block btn-primary">Submit Payment</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
