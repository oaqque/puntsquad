<div class="row">
  <div class="col-md-12">
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="text-center">Current Horse Bets</h3>
          <h5 class="text-center"><%= Time.current %></h5>
        </div>
        <div class="panel-body text-center">
          <p>
            Our Horse Racing Tips will begin being released at approximately
            <strong>10:00am UTC+10
            </strong>. You will be notified throughout the day via email when specific meets are completed.
          </p>
        </div>
        <div class="table-responsive">
          <table class="table">
            <tr>
              <th>Game</th>
              <th>Bet Placed</th>
              <th>Units Placed</th>
              <th>Odds</th>
              <th>Bookmaker</th>
            </tr>
            <% if current_user.plan_id? || current_user.try(:admin?)%>
            <% for bet in @today_horse_bets do %>
            <tr>
              <td>
                <strong><%= link_to "#{bet.game}", bet_path(:id => bet.id)%></strong>
              </td>
              <td><%= bet.bet_placed %></td>
              <td><%= bet.units_placed %></td>
              <td><%= bet.odds %></td>
              <td>
                <% if bet.bookmaker == 1 %>
                Sportsbet
                <% elsif bet.bookmaker == 2 %>
                William Hill
                <% elsif bet.bookmaker == 3 %>
                CrownBet
                <% elsif bet.bookmaker == 4 %>
                Unibet
                <% elsif bet.bookmaker == 5 %>
                Centrebet
                <% elsif bet.bookmaker == 6 %>
                UBet
                <% elsif bet.bookmaker == 7 %>
                bet365
                <% elsif bet.bookmaker == 8 %>
                TAB
                <% elsif bet.bookmaker == 9 %>
                Pinnacle
                <% elsif bet.bookmaker == 10 %>
                Ladbrokes
                <% elsif bet.bookmaker == 11 %>
                Bookmaker
                <% elsif bet.bookmaker == 12 %>
                MadBookie
                <% elsif bet.bookmaker == 13 %>
                Luxbet
                <% end %>
              </td>
            </tr>
            <% end %>
            <% end %>
          </table>
        </div>
        <div class="panel-footer">
          <p>
            <strong>Note</strong>: We only pick bets which are considered profitable, there may be some days where no bets are released due to a lack of overlay.
          </p>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="text-center">Current Sports Bets</h3>
          <h5 class="text-center"><%= Time.current %></h5>
        </div>
        <div class="panel-body text-center">
          <p>
            You will be notified via email if there are sports tips available.
          </p>
        </div>
        <div class="table-responsive">
          <table class="table">
            <tr>
              <th>Game</th>
              <th>Sport</th>
              <th>Bet Placed</th>
              <th>Units Placed</th>
              <th>Odds</th>
              <th>Bookmaker</th>
            </tr>
            <% if current_user.plan_id? || current_user.try(:admin?)%>
            <% for bet in @today_bets do %>
            <tr>
              <td>
                <strong><%= link_to "#{bet.game}", bet_path(:id => bet.id)%></strong>
              </td>
              <td>
                <% if bet.sport == 1 %>
                <%= link_to "Basketball", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 2 %>
                <%= link_to "NRL", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 3 %>
                <%= link_to "Super Rugby", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 4 %>
                <%= link_to "AFL", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 5 %>
                <%= link_to "eSports", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 6 %>
                <%= link_to "Ice Hockey", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 7 %>
                <%= link_to "Horse Racing", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 8 %>
                <%= link_to "Tennis", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 9 %>
                <%= link_to "NFL", results_by_sport_path(:sport=>bet.sport) %>
                <% elsif bet.sport == 10 %>
                <%= link_to "Cricket", results_by_sport_path(:sport=>bet.sport) %>
                <% end %>
              </td>
              <td><%= bet.bet_placed %></td>
              <td><%= bet.units_placed %></td>
              <td><%= bet.odds %></td>
              <td>
                <% if bet.bookmaker == 1 %>
                Sportsbet
                <% elsif bet.bookmaker == 2 %>
                William Hill
                <% elsif bet.bookmaker == 3 %>
                CrownBet
                <% elsif bet.bookmaker == 4 %>
                Unibet
                <% elsif bet.bookmaker == 5 %>
                Centrebet
                <% elsif bet.bookmaker == 6 %>
                UBet
                <% elsif bet.bookmaker == 7 %>
                bet365
                <% elsif bet.bookmaker == 8 %>
                TAB
                <% elsif bet.bookmaker == 9 %>
                Pinnacle
                <% elsif bet.bookmaker == 10 %>
                Ladbrokes
                <% elsif bet.bookmaker == 11 %>
                Bookmaker
                <% elsif bet.bookmaker == 12 %>
                MadBookie
                <% elsif bet.bookmaker == 13 %>
                Luxbet
                <% end %>
              </td>
            </tr>
            <% end %>
            <% end %>
          </table>
        </div>
        <div class="panel-footer">
          <p>
            <strong>Note</strong>: We only pick bets which are considered profitable, there may be some days where no bets are released due to a lack of overlay.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h3><%= Time.now.strftime('%B') %></h3>
        </div>
        <h4>Total Profit/Loss</h4>
        <% if @monthly_total > 0 %>
        <h1>
          <span class="label label-success">+<%=@monthly_total%></span>
        </h1>
        <% elsif @monthly_total == 0 %>
        <h1>
          <span class="label label-default"><%=@monthly_total%></span>
        </h1>
      <% else %>
        <h1>
          <span class="label label-danger"><%=@monthly_total%></span>
        </h1>
        <% end %>
        <br />
        <%= link_to "View This Month", results_by_year_and_month_path(:year => Time.now.year, :month => Time.now.month), class: 'btn btn-default' %>
        <%= link_to "View All Results", results_path, class: 'btn btn-default' %>
        <br/><br/>
      </div>

      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h3>Subscriptions</h3>
        </div>
        <h4><%= current_user.email %></h4>
        <% if current_user.plan_id? %>
        <p>
          <b>Subscription Status:</b> <br/><span class="label label-success">Subscribed</span>
        </p>
        <p>
          <b>Current Plan:</b> <br/><%= @plan_name %>
        </p>
        <p>
          <b>Date of next Bill:</b>

        </p>
        <% else %>
        <p>
          <b>Subscription Status:</b> <br/><span class="label label-danger">Unsubscribed</span>
        </p>
        <p><%= link_to "Subscribe Now", "", class: 'btn btn-default disabled' %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
