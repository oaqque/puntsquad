
<% if current_user %>
  <div class="jumbotron user-home">
    <div class="container">
      <h1 class="text-center"><%= image_tag("logo.png") %></h1>
      <p class="text-center">Get Started Now!</p>
    </div>
  </div>
<% else %>
  <div class="jumbotron home-page">
    <h1 class="text-center"><%= image_tag("logo.png") %></h1>
    <h1 class="text-center"><%= image_tag("logo-text.png") %></h1>
    <p class="text-center">Your home for Sports Betting tips.</p>
  </div>
<% end %>


<div class="container">
  <% if current_user %>
    <%= render "user_home" %>
  <% else %>
    <%= render "no_user_home" %>
  <% end %>
</div>
