<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Horse Analysis</h1>
    </div>
    

    <div class="col-md-8">
      <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Odds of Bets</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-4">
            <h3>Under 3</h3>
            <h4>All</h4>
            <p>Total Staked: <%= @hu3_total_staked %></p>
            <p>PnL: <%= @hu3_pnl %></p>
            <h4>Place</h4>
            <p>Total Staked: <%= @hu3place_total_staked %></p>
            <p>PnL: <%= @hu3place_pnl %></p>
            <h4>Win</h4>
            <p>Total Staked: <%= @hu3win_total_staked %></p>
            <p>PnL: <%= @hu3win_pnl %></p>
          </div>
          <div class="col-md-4">
            <h3>Under 3-7</h3>
            <p>3 to 7 Total Staked: <%= @h3to7_total_staked %></p>
            <p>3 to 7 PnL: <%= @h3to7_pnl %></p>
          </div>
          <div class="col-md-4">
            <h3>Over 7</h3>
            <p>Over 7 Total Staked: <%= @ho7_total_staked %></p>
            <p>Over 7 PnL: <%= @ho7_pnl %></p>
          </div>
        </div>
      </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Win</h3>
        </div>
        <div class="panel-body">
          <p><strong>Total Staked: </strong><%= @horse_place_total_staked %></p>
          <p><strong>PnL: </strong><%= @horse_place_pnl %></p>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Place</h3>
        </div>
        <div class="panel-body">
          <p><strong>Total Staked: </strong><%= @horse_win_total_staked %></p>
          <p><strong>PnL: </strong><%= @horse_win_pnl %></p>
        </div>
      </div>
    </div>
  </div>
</div>
