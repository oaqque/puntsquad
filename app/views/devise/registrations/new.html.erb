<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if params[:plan] == '4' %>
        <h1 class="text-center">Weekly Membership $15/wk</h1>
      <% elsif params[:plan] == '5' %>
        <h1 class="text-center">Monthly Membership $50/mo</h1>
      <% elsif params[:plan] == '6' %>
        <h1 class="text-center">Yearly Membership $500/yr</h1>
      <% end %>
      <div class="well">
        <h2> Sign Up </h2>
        <%= render "basic_form" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
