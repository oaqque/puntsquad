<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% if params[:plan] == '4' %>
        <h1 class="text-center">Weekly Membership</h1>
      <% elsif params[:plan] == '5' %>
        <h1 class="text-center">Monthly Membership</h1>
      <% elsif params[:plan] == '6' %>
        <h1 class="text-center">Yearly Membership</h1>
      <% end %>
      <div class="well">
        <h2> Sign Up </h2>
        <%= render "basic_form" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
