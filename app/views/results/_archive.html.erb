<h2>Archive</h2>
<ul class="list-group">
  <% @archive_by_month.each do |month, posts| %>
    <li class="list-group-item"><%= link_to "#{month.strftime('%B %Y')}", results_by_year_and_month_path(:year=> month.strftime('%Y'), :month => month.strftime('%-m')) %></li>
  <% end %>
</ul>
<h2>Sports</h2>
<ul class="list-group">'
  <% @archive_by_sport.each do |sport, posts| %>
    <% if sport == 1 %>
      <li class="list-group-item"><%= link_to "Basketball", "" %></li>
    <% elsif sport == 2 %>
      <li class="list-group-item"><%= link_to "NRL", "" %></li>
    <% elsif sport == 3 %>
      <li class="list-group-item"><%= link_to "Super Rugby", "" %></li>
    <% elsif sport == 4 %>
      <li class="list-group-item"><%= link_to "AFL", "" %></li>
    <% elsif sport == 5 %>
      <li class="list-group-item"><%= link_to "eSports", "" %></li>
    <% elsif sport == 6 %>
      <li class="list-group-item"><%= link_to "Ice Hockey", "" %></li>
    <% elsif sport == 7 %>
      <li class="list-group-item"><%= link_to "Horse Racing", "" %></li>
    <% elsif sport == 8 %>
      <li class="list-group-item"><%= link_to "Tennis", "" %></li>
    <% elsif sport == 9 %>
      <li class="list-group-item"><%= link_to "NFL", "" %></li>
    <% end %>
  <% end %>
</ul>
