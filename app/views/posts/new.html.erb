<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header text-center">New Post</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for :post do |f| %>
        <p class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: "form-control" %>
        </p>

        <p class="form-group">
          <%= f.label :text %><br>
          <%= f.text_area :text, class: "form-control", rows: 15 %>
        </p>

        <p class="form-group">
          <%= f.submit 'Submit', class: 'btn btn-default btn-lg' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
